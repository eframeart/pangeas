.category-container
  .grid-container
    .hero
      .text-center.title
        h3.m-0
          span.bg-highlight Todos os v√≠deos
          |  de #{@category.name}
        h5 #{@category.description}
      - if @highlight
        .grid-x.grid-padding-x
          .medium-6.cell
            = render partial: 'layouts/video_link',
              locals: { resource: @highlight, extra_class: 'highlighted' }
          .medium-6.cell
            div
              h5= @highlight.name
              p= @highlight.description
    .video-list.grid-x.grid-padding-x.grid-padding-y
      - unless @videos.empty?
        - @videos.each do |serie|
          - unless serie.highlighted
            .medium-4.cell.img-container
              = render partial: 'layouts/video_link',
                locals: { resource: serie }
              h6= serie.name
      - unless @series.empty?
        - @series.each do |video|
          - unless video.highlighted
            .medium-4.cell.img-container
              = render partial: 'layouts/video_link',
                locals: { resource: video }
              h6= video.name
